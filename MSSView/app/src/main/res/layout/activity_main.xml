<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mss.custom.MainActivity">

    <com.mss.custom.view.RingView
        android:id="@+id/circle_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        app:arcColor="@color/colorPrimary"
        app:arcWidth="30dp"
        app:centerTextSize="20sp"
        app:circleRadius="60dp"
        app:centerText="MSS"
        app:centerTextColor="@color/black"/>

    <Button
        android:id="@+id/outer_color_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="change outer color" />

    <Button
        android:id="@+id/inner_color_btn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="change inner color" />
</LinearLayout>
