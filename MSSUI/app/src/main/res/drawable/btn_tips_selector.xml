<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_color_normal" />
            <corners android:radius="@dimen/dialog_tips_radius" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_color_pressed" />
            <stroke android:width="3dp" android:color="#7f000000"/>
            <corners android:radius="@dimen/dialog_tips_radius" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_color_pressed" />
            <corners android:radius="@dimen/dialog_tips_radius" />
        </shape>
    </item>
</selector>
